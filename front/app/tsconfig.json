{
  "compilerOptions": {
    // "strict": true,
    "baseUrl": "./",
    "mapRoot": "./",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "types": ["vite/client", "jest", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "isolatedModules": true,
    "paths": {
      "@citizenlab/cl2-component-library": ["./component-library"]
    }
  },
  "files": ["custom.d.ts"],
  "include": [
    "**/*",
    "../playwright.config.ts",
    "../vite.config.ts",
    "../vite-env.d.ts",
    "../jest.config.js",
    "../internals/jest/setup.js",
    "globals.d.ts"
  ],
  "exclude": ["node_modules"]
}
